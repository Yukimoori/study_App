<!DOCTYPE html>
<html>
  <head>
    <title>StudyApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>
    <div class="top_gazo">

    <div class = "header">
      <%= link_to image_tag( "studyApp-removebg-preview.png", class: "header_logo" ), root_path %>
    </div>

    <div class = "main">
      <%= yield %>
    </div>

    <div class = "footer">
      <%= link_to '戻る', :back %>
    </div>

  </div>
    <script>
      $(function(){
        $(".alert").fadeOut(5000);
      });
    </script>
  </body>
</html>
