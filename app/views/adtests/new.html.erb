<div class="col-md-offset-1">
  <h2 class="page_title">問題作成</h2>
  <%= form_for @workbook, url: adtests_path do |f| %>
    <div class="row" >
      <div class="col-md-5" >
        <div class="input_workbook" >
          <%= f.label :"問題番号" %>
          <%= f.text_field :test_id %>
        </div>
        <div class="input_workbook" >
          <%= f.label :"問題", class:'test-label' %>
          <%= f.text_area :test, class:'test-size' %>
        </div>
        <div class="input_workbook" >
          <%= f.label :"解答", class:'test-label' %>
          <%= f.text_field :correct_answer, class:'answer-size' %>
        </div>
      </div>
      <div class="col-md-4" >
        <div class="input_workbook" >
          <%= f.label :"A", class:'test-label' %>
          <%= f.text_field :select_answer1, class:'select-size' %>
        </div>
        <div class="input_workbook" >
          <%= f.label :"B", class:'test-label' %>
          <%= f.text_field :select_answer2, class:'select-size' %>
        </div>
        <div class="input_workbook" >
          <%= f.label :"C", class:'test-label' %>
          <%= f.text_field :select_answer3, class:'select-size' %>
        </div>
        <div class="input_workbook" >
          <%= f.label :"D", class:'test-label' %>
          <%= f.text_field :select_answer4, class:'select-size' %>
        </div>
      </div>
    </div>
    <div class="row" >
      <div class="col-md-offset-8" >
        <%= f.submit "作成", class:'btn-admin admin_create' %>
      </div>
    </div>
  <% end %>
</div>
